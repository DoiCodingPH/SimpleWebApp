<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div>
        <a asp-controller="Home" asp-action="Index">Index</a>
        <a asp-controller="Home" asp-action="Post">Post</a>
        <a asp-controller="Home" asp-action="Create">Create</a>
        
        @if (!User.Identity.IsAuthenticated)
        {
            <a asp-controller="Auth" asp-action="Login">Login</a>
        }
        else
        {
            <a asp-controller="Auth" asp-action="Logout">Logout</a>
        }
    </div>
    <div>
        @RenderBody()
    </div>
</body>
</html>
